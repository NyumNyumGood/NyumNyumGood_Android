<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WantedHackathon" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/transparent_black20</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <!-- Customize your theme here. -->
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Widget.BottomNavigationView"
        parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/pretendardregular</item>
    </style>

    <style name="Widget.BottomNavigationActiveView"
        parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/pretendardbold</item>
    </style>

    <style name="Widget.MaterialComponents.TabLayout" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/pretendardsemibold</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Widget.MaterialComponentsMyPage.TabLayout" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/pretendardsemibold</item>
        <item name="android:textSize">13sp</item>
    </style>
</resources>