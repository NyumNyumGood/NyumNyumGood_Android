<?xml version="1.0" encoding="utf-8"?>
<layout>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_return"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/ic_back_icn_3x"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textview_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendardmedium"
        android:text="가입하기"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/button_return"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button_return" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textview_set_university"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="대학교 인증을 진행해주세요"
        android:fontFamily="@font/pretendardbold"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginStart="16dp"
        android:layout_marginTop="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_return"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textview_explanation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/signup_certify_university"
        android:layout_marginTop="4dp"
        android:textColor="@color/grey7"
        android:fontFamily="@font/pretendardregular"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/textview_set_university"
        app:layout_constraintTop_toBottomOf="@id/textview_set_university"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textview_entrance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="학교 웹메일"
        android:textSize="12sp"
        android:fontFamily="@font/pretendardsemibold"
        android:textColor="@color/grey7"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/textview_explanation"
        app:layout_constraintStart_toStartOf="@id/textview_explanation"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edittext_web_mail"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:layout_marginHorizontal="16dp"
        android:hint="웹메일을 작성해주세요"
        android:fontFamily="@font/pretendardregular"
        android:textSize="12sp"
        android:paddingStart="12dp"
        android:textColorHint="@color/grey3"
        android:textColor="@color/black"
        android:background="@drawable/background_mypage_header"
        app:layout_constraintTop_toBottomOf="@id/textview_entrance"
        app:layout_constraintStart_toStartOf="@id/textview_entrance"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_send_mail"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/button_signup_selector"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:stateListAnimator="@null"
        android:text="전송"
        android:textColor="@color/white"
        android:fontFamily="@font/pretendardbold"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/edittext_web_mail"
        app:layout_constraintTop_toBottomOf="@id/edittext_web_mail"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textview_verification_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="인증번호"
        android:textSize="12sp"
        android:fontFamily="@font/pretendardsemibold"
        android:textColor="@color/grey7"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/button_send_mail"
        app:layout_constraintStart_toStartOf="@id/textview_explanation"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edittext_verification_number"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:layout_marginHorizontal="16dp"
        android:hint="인증 번호를 작성해주세요"
        android:fontFamily="@font/pretendardregular"
        android:textSize="12sp"
        android:paddingStart="12dp"
        android:textColorHint="@color/grey3"
        android:textColor="@color/black"
        android:background="@drawable/background_mypage_header"
        app:layout_constraintTop_toBottomOf="@id/textview_verification_number"
        app:layout_constraintStart_toStartOf="@id/textview_entrance"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_complete"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/button_signup_selector"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="40dp"
        android:stateListAnimator="@null"
        android:text="확인"
        android:textColor="@color/white"
        android:fontFamily="@font/pretendardbold"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/edittext_web_mail"
        app:layout_constraintTop_toBottomOf="@id/edittext_verification_number"/>







</androidx.constraintlayout.widget.ConstraintLayout>
</layout>