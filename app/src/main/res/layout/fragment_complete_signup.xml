<?xml version="1.0" encoding="utf-8"?>
<layout>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_return"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/ic_back_icn_3x"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textview_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendardmedium"
        android:text="가입하기"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/button_return"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button_return" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textview_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디"
        android:textSize="12sp"
        android:fontFamily="@font/pretendardsemibold"
        android:textColor="@color/grey7"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/button_return"
        app:layout_constraintStart_toStartOf="@id/button_return"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edittext_web_mail"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:layout_marginHorizontal="16dp"
        android:hint="아이디를 입력해주세요"
        android:fontFamily="@font/pretendardregular"
        android:textSize="12sp"
        android:paddingStart="12dp"
        android:textColor="@color/grey3"
        android:background="@drawable/background_mypage_header"
        app:layout_constraintTop_toBottomOf="@id/textview_id"
        app:layout_constraintStart_toStartOf="@id/textview_id"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textview_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호"
        android:textSize="12sp"
        android:fontFamily="@font/pretendardsemibold"
        android:textColor="@color/grey7"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/edittext_web_mail"
        app:layout_constraintStart_toStartOf="@id/textview_id"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edittext_password"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:layout_marginHorizontal="16dp"
        android:hint="비밀번호 영문, 숫자 포함 6자 이상"
        android:fontFamily="@font/pretendardregular"
        android:textSize="12sp"
        android:paddingStart="12dp"
        android:textColor="@color/grey3"
        android:background="@drawable/background_mypage_header"
        app:layout_constraintTop_toBottomOf="@id/textview_password"
        app:layout_constraintStart_toStartOf="@id/textview_password"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edittext_password_check"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        android:hint="비밀번호 확인"
        android:fontFamily="@font/pretendardregular"
        android:textSize="12sp"
        android:paddingStart="12dp"
        android:textColor="@color/grey3"
        android:background="@drawable/background_mypage_header"
        app:layout_constraintTop_toBottomOf="@id/edittext_password"
        app:layout_constraintStart_toStartOf="@id/edittext_password"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_complete"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/button_signup_unactive"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="40dp"
        android:stateListAnimator="@null"
        android:text="확인"
        android:textColor="@color/white"
        android:fontFamily="@font/pretendardbold"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/edittext_web_mail"
        app:layout_constraintTop_toBottomOf="@id/edittext_password_check"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>